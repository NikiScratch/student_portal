    <table class="table table-hover">
        <%#= schedule.user.name%>
        <% @schedule.subjects.each do |subject|%>
        <tr><td><%= subject.name%></td>
        </tr>
        <%end%>
    </table>

    <table class="table table-hover">
    <strong>Click Available class below to populate schedule</strong>
        <% @subject.each do |subject|%>
        <tr>
            <td><%= link_to subject.name, addsubject_path(:schedule_id =>@schedule.id, :subject_id => subject.id) %></td>
        </tr>
        <% end %>
    </table>  

