<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @assignment.description %>
</p>

<p>
  <strong>Class:</strong>
  <%= @assignment.subject.name %>
</p>

<p><strong>Comments about this assignment.</strong></p>

<% @assignment.comments.each do |comments| %>
<%= comments.description %> Posted by <%= current_user.first_name%><p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@assignment, @assignment.comments.build]) do |f| %>
  <p>
 
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Edit', edit_assignment_path(@assignment) %> |
<%= link_to 'Back', assignments_path %>
