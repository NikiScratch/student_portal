<h1>Classes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Schedule</th>
      <th>Teacher</th>
      <th>Total Assignments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%#= subject.schedule_id %></td>
        <td><%= subject.teacher.first_name %></td>
        <td><%= subject.assignments.count %> assignments </td>
        <p>
        <td><%= link_to 'View', subject %>|
        <%= link_to 'Edit', edit_subject_path(subject) %>|
        <%= link_to 'Delete', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path %>
